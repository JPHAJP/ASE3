    <script src="/static/js/gripper.js"></script>
    <script src="/static/js/robot.js"></script>
    <script>
        // Script principal simplificado - La funcionalidad está en módulos separados
        // Variables globales mínimas
        let socket;
        
        // Funciones para manejar el input de IP del Gripper
        function handleGripperIPKeyPress(event) {
            if (event.key === 'Enter') {
                updateGripperIPFromInput();
                event.preventDefault();
            }
        }
        
        function updateGripperIPFromInput() {
            const input = document.getElementById('gripperIPInput');
            const ipPortValue = input.value.trim();
            
            if (!ipPortValue) {
                console.warn('IP:Puerto no puede estar vacío');
                return;
            }
            
            // Separar IP y puerto del string
            let host, port;
            if (ipPortValue.includes(':')) {
                const parts = ipPortValue.split(':');
                host = parts[0].trim();
                port = parseInt(parts[1].trim());
                
                if (isNaN(port) || port < 1 || port > 65535) {
                    console.warn('Puerto inválido:', parts[1]);
                    input.value = '192.168.68.125:23'; // Restaurar valor por defecto
                    return;
                }
            } else {
                console.warn('Formato inválido. Use IP:Puerto (ej: 192.168.68.125:23)');
                input.value = '192.168.68.125:23'; // Restaurar valor por defecto
                return;
            }
            
            // Actualizar configuración del gripper via Socket.IO
            if (socket) {
                socket.emit('update_gripper_config', {
                    host: host,
                    port: port
                });
                console.log(`🔧 Actualizando configuración del gripper: ${host}:${port}`);
                
                if (window.addLogMessage) {
                    window.addLogMessage(`🔧 Configuración del gripper actualizada: ${host}:${port}`, 'info');
                }
            }
        }
        
        // Inicialización principal
        document.addEventListener('DOMContentLoaded', function() {
            // Inicializar Socket.IO global
            socket = io();
            
            // Configurar listener para actualización de configuración del gripper
            socket.on('update_gripper_config', function(data) {
                if (window.updateGripperConfig) {
                    window.updateGripperConfig(data.host, data.port);
                }
            });
            
            // Los controladores modulares se inicializan automáticamente
            console.log('✅ Sistema inicializado - Módulos cargados');
            
            // Log inicial
            setTimeout(() => {
                if (window.addLogMessage) {
                    window.addLogMessage('🚀 Sistema web inicializado correctamente', 'info');
                }
            }, 500);
            
        });
    </script>
